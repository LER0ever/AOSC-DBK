#!/bin/bash

main() {
  docker run \
      -it \
      --rm \
      --name "LER0ever-AOSC-DBK" \
      --hostname "LER0ever-AOSC-DBK" \
      --volume "$PWD":/var/lib/acbs/repo \
      --volume "$PWD/../pkgs/os-amd64":/os-amd64 \
      --volume "$PWD/../pkgs/os-noarch":/os-noarch \
      --volume ~/.ssh/id_rsa:/home/everette/.ssh/id_rsa \
      ler0ever/aosc-dbk "$@"
}

main "$@"
